<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fitxers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sergi.practicafinal.Fitxers">

    <TextView
        android:text="FITXERS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Fitxers En Memoria Interna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/Boto1"
        android:onClick="onClickBoto1" />

    <Button
        android:text="Fitxer En Memoria Externa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Boto1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:id="@+id/Boto2"
        android:onClick="onClickBoto2" />

    <Button
        android:text="Fitxer En /RAW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Boto2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:id="@+id/Boto3"
        android:onClick="onClickBoto3" />
</RelativeLayout>
